<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity">

    <TextView
        android:id="@+id/txtNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="@string/txtEntry"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/years"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNew" />

    <Spinner
        android:id="@+id/months"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/txtMonth"
        app:layout_constraintTop_toBottomOf="@+id/txtNew" />

    <Spinner
        android:id="@+id/days"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@+id/txtDay"
        app:layout_constraintTop_toBottomOf="@+id/txtNew" />

    <TextView
        android:id="@+id/txtYear"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        android:text="@string/year"
        app:layout_constraintStart_toEndOf="@+id/years"
        app:layout_constraintTop_toBottomOf="@+id/txtNew" />

    <TextView
        android:id="@+id/txtMonth"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        android:text="@string/month"
        app:layout_constraintEnd_toStartOf="@+id/days"
        app:layout_constraintTop_toBottomOf="@+id/txtNew" />

    <TextView
        android:id="@+id/txtDay"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:text="@string/day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNew" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="@string/txtTitle"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/years" />

    <TextView
        android:id="@+id/txtMemo"
        android:layout_width="34dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="@string/txtMemo"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/years" />

    <EditText
        android:id="@+id/memo"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMemo"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/btnEntry"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnToTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnToTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="70dp"
        android:text="@string/btnToTop"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>